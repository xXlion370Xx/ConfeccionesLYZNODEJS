<!DOCTYPE html>
<html lang="en">

<head>
    <title>Pagina Administrador - Trabajadores</title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('templates/bootstrap.ejs') %>
    <script src="https://kit.fontawesome.com/0364c5acb2.js" crossorigin="anonymous"></script>

</head>
<body>
<nav class="navbar bg-body-tertiary bg-dark " data-bs-theme="dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">
            <h2>Gestionar Empleados</h2>
        </a>
        <a href="/login" style="float: right;">Atras
        <i class="fa-solid fa-power-off" style="color: #ffffff;"></i></a>
    </div> 
</nav><BR>

    <div class="col-2 m-2">
        <a  class="btn btn-primary m-2" data-bs-toggle="modal" data-bs-target="#modalInsert"><i class="fa-solid fa-circle-plus"></i></a>
    </div>

    <div class="col-8">
        <table class="table table-hover m-4">
            <thead class="table-success">
            <tr>
                <th>Id</th>
                <th>Usuario</th>
                <th>Rol</th>
                <th>Estado</th>
                <th>Acciones</th>
        
            </tr>
            </thead>
            <tbody>
                    
            <% worker.forEach((element)=>{ %>
                <tr>
                <td><%= element.id %></td>
                <td><%= element.name %></td>
                <td><%= element.rol %></td>
                <td><%= element.status %></td>
                
                <td>
                    <a href="" class="btn btn-outline-success" ><i class="fa-solid fa-pen"></i></a>
                    <a class="btn btn-outline-danger"><i class="fa-solid fa-circle-minus"></i></a>
                </td>
            <%})%>
            </tr>
            </tbody>  
        </table>
    </div>

     <!-- Modal -->
    <div class="modal fade" id="modalInsert" tabindex="-1" aria-labelledby="modalInsertLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
              <div class="modal-header">
              <h1 class="modal-title fs-5" id="modalInsertLabel">Crear Nuevo Empleado</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                  <form action="/admin/createWorker" method="POST">
                      <div class="form-floating mb-3">
                          <input type="text" class="form-control" id="usuario" name="usuario">
                          <label for="floatingInput">Usuario</label>
                      </div>
                      <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="password" name="password" value="123" readonly>
                        <label for="floatingInput">Contraseña</label>
                        <small><i>Esta constraseña sera la predeterminada*</i></small>
                    </div>
                     
                      <button type="submit" class="btn btn-primary m-2">Crear Empleado</button>
                      
                  </form>
              </div>
          </div>
        </div>
    </div>
</body>
</html>